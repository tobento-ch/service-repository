{
    "name": "tobento/service-repository",
    "type": "library",
    "description": "Repository interfaces for PHP applications.",
    "keywords": [
        "tobento",
        "package",
        "PHP",
        "repository"
    ],
    "homepage": "https://www.tobento.ch",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Strub",
            "email": "info@tobento.ch",
            "homepage": "https://www.tobento.ch"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "tobento/service-collection": "^1.0.5",
        "tobento/service-iterable": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.0",
        "tobento/service-event": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Tobento\\Service\\Repository\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tobento\\Service\\Repository\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "psalm": "vendor/bin/psalm"
    }
}